<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="505dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/m_button_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="388dp"
        android:layout_marginEnd="387dp"
        android:layout_marginBottom="100dp"
        android:text="CheckitOut"
        android:textColor="#ffffff"
        android:textSize="100sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/m_button_1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/m_button_2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="540dp"
        android:layout_marginEnd="540dp"
        android:layout_marginBottom="60dp"
        android:typeface="sans"
        android:textSize="30sp"
        android:textColor="#f5f7fa"
        android:background="#4d83c9"
        android:textStyle="bold"
        android:text="Create" />

    <Button
        android:id="@+id/m_button_2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/m_button_3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="540dp"
        android:layout_marginEnd="540dp"
        android:layout_marginBottom="60dp"
        android:typeface="sans"
        android:textSize="30sp"
        android:textColor="#f5f7fa"
        android:background="#4d83c9"
        android:textStyle="bold"
        android:text="Result" />

    <Button
        android:id="@+id/m_button_3"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="540dp"
        android:layout_marginEnd="540dp"
        android:layout_marginBottom="100dp"
        android:typeface="sans"
        android:textSize="30sp"
        android:textColor="#f5f7fa"
        android:background="#4d83c9"
        android:textStyle="bold"
        android:text="Guide" />


</RelativeLayout>